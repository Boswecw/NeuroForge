# NeuroForge Environment Configuration
# Copy this file to .env and customize for your environment

# Environment: development, staging, or production
ENVIRONMENT=development

# Security & Authentication
# CRITICAL: Generate a secure key for production using: python3 -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=dev-secret-key-change-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=1440  # 24 hours

# Allow x-user-id header (set to false in production for security)
ALLOW_X_USER_ID_HEADER=true

# Server Configuration
HOST=0.0.0.0
PORT=8000
DEBUG=false

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# Database
DATABASE_URL=sqlite+aiosqlite:///./neuroforge.db

# API Keys (optional - for LLM execution)
ADMIN_API_KEY=
OPENAI_API_KEY=
ANTHROPIC_API_KEY=

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60

# Logging
LOG_LEVEL=INFO

# DataForge Configuration
DATAFORGE_BASE_URL=http://localhost:8001
